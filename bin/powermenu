#!/usr/bin/env bash

op=$(echo -e " Poweroff\n Reboot\n Suspend\n Lock\n Logout" | \
    wofi --insensitive --dmenu | \
    awk '{print tolower($2)}')

case $op in 
    lock)     swaylock  -i ~/dot/papes/hollow-knight.png ;;
    logout)   swaymsg   exit                              ;;
    reboot)   systemctl reboot                            ;;
    suspend)  systemctl suspend                           ;;
    poweroff) systemctl poweroff                          ;;
esac
